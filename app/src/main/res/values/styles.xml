<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기존 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 기존 테마 설정 -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- 스플래시 스크린 전용 테마 -->
    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!-- 상태창 색상 -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- 상태창 텍스트 색상 (Light 모드 활성화) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.Chip.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@xml/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@xml/slide_out_bottom</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/card_top_corners</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>
