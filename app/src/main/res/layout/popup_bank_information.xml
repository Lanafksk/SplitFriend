<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="16dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:src="@drawable/baseline_close_black_24"
        android:contentDescription="Close" />

    <EditText
        android:id="@+id/bankNameInput"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/stroke_box_background"
        android:hint="Bank Name"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/bankAccountInput"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/stroke_box_background"
        android:hint="Bank Account"
        android:textColorHint="@color/black"/>

    <!-- join Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Save"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/lightblue_button_background" />
</LinearLayout>
