<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>
    <!--        android:layout_marginTop="330.4dp"-->
    <!--        android:layout_marginLeft="126.2dp"-->

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:text="Welcome to SplitFriend !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/appDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Group Expenses Seamlessly"
        android:textColor="@color/splash_description"
        android:layout_below="@+id/appNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
