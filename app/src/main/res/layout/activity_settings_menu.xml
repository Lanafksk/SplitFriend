<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 바 -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/light_blue">

        <!-- 뒤로가기 버튼 -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:contentDescription="Back" />

        <!-- 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- 메뉴 리스트 -->
    <ListView
        android:id="@+id/menuListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:layout_above="@+id/premiumButton" />

    <!-- Premium 버튼 -->
    <RelativeLayout
        android:id="@+id/premiumButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <!-- 왕관 아이콘과 텍스트를 중앙 정렬 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <!-- 왕관 아이콘 -->
            <ImageView
                android:id="@+id/crownIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_crown"
                android:contentDescription="Crown Icon"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Premium 텍스트 -->
            <TextView
                android:id="@+id/premiumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#FFDA56"
                android:layout_toEndOf="@id/crownIcon"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
