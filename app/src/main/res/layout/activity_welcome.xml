<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:text="Welcome to SplitFriend !"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/appDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Group Expenses Seamlessly"
        android:textColor="@color/splash_description"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Login 버튼 -->
    <android.widget.Button
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/appDescriptionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Log in"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/main_color"
        android:background="@drawable/button_border"/>

    <!-- Register 버튼 -->
    <android.widget.Button
        android:id="@+id/btnRegister"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textSize="18sp"
        android:textColor="@color/main_color"
        android:background="@drawable/button_border"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find my id / password"
        android:textColor="#A9A9A9"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
